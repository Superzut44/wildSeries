{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}

<h1>Catégories :</h1>

<ul>
    {% for category in categories %}
        <li>
            <a href="{{ path("category_show", { categoryName: category.name }) }}">{{ category.name }}</a>
        </li>
    {% endfor %}
</ul>

    <a href="{{ path('category_new') }}">Ajout à la liste</a>
{% endblock %}