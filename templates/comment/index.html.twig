{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'List of comments'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'Comment'|trans }}</th>
                <th>{{ 'Rate'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.comment }}</td>
                <td>{{ comment.rate }}</td>
                <td>
                    <a href="{{ path('comment_show', {'id': comment.id}) }}">{{ 'Show'|trans }}</a>
                    <a href="{{ path('comment_edit', {'id': comment.id}) }}">{{ 'Edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'No comment found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('comment_new') }}">{{ 'Create new comment'|trans }}</a>
{% endblock %}
