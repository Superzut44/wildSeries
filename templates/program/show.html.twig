{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <section class="program_show_container">
        <img class="program_show_img" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="program_show_text">
            <h1>{{ program.title }}</h1>
            <p class="program_show_summary">{{ program.summary }}</p>
            <h3>Catégorie :</h3> 
            <p>{{ program.category.name }}</p>
            <a href="{{ path('program_edit', {'id': program.id}) }}">editer la série</a>
            {% for season in program.seasons %}
                <div class="program_show_season-edit">
                    <a href="{{ path('program_season_show', { program: program.id , season: season.id }) }}">{{ season.description }}</a>
                </div>
            {% endfor %}
            {% if program.actors %}
            <h3>Liste des acteurs :</h3>
            <ul>
                {% for actor in program.actors %}
                    <li>
                        <a href="{{ path('actor_show', { id: actor.id }) }}">{{ actor.name }}</a>
                    </li>
            {% else %}
                <li>Aucun acteur pour cette série</li>
            {% endfor %}
            </ul>
            {% endif %}
            <a href="{{ path('program_index') }}">
                Retour à la liste des programmes
            </a>
        </div>
    </section>
{% endblock %}
