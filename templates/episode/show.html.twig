{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'Episode'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'Title'|trans }}</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>{{ 'Episode number'|trans }}</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>{{ 'Synopsis'|trans }}</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('episode_index') }}">{{ 'Back to list'|trans }}</a>

    <a href="{{ path('episode_edit', {'slug': episode.slug}) }}">{{ 'Edit'|trans }}</a>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
