{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'Seasons'|trans }} :</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'Description'|trans }}</th>
                <th>{{ 'Season number'|trans }}</th>
                <th>{{ 'Year'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.description }}</td>
                <td>{{ season.number }}</td>
                <td>{{ season.year }}</td>
                <td>
                    <a href="{{ path('season_show', {'id': season.id}) }}">{{ 'Show'|trans }}</a>
                    <a href="{{ path('season_edit', {'id': season.id}) }}">{{ 'Edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ 'No season'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('season_new') }}">{{ 'Create new season'|trans }}</a>
{% endblock %}
