{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'Season'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'Description'|trans }}</th>
                <td>{{ season.description }}</td>
            </tr>
            <tr>
                <th>{{ 'Season number'|trans }}</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>{{ 'Year'|trans }}</th>
                <td>{{ season.year }}</td>
            </tr>
            
        </tbody>
    </table>

    <a href="{{ path('season_index') }}">{{ 'Back to list'|trans }}</a>

    <a href="{{ path('season_edit', {'id': season.id}) }}">{{ 'Edit'|trans }}</a>

    {{ include('season/_delete_form.html.twig') }}
{% endblock %}
